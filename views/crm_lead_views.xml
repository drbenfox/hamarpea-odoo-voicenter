<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_crm_lead_form_voicenter" model="ir.ui.view">
        <field name="name">crm.lead.form.voicenter</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_calls" icon="fa-phone"
                        invisible="voicenter_call_count == 0">
                    <field name="voicenter_call_count" widget="statinfo" string="Phone Calls"/>
                </button>
            </xpath>
            
            <xpath expr="//group[@name='lead_priority']" position="after">
                <group name="voicenter_info" string="Call Information" invisible="voicenter_call_count == 0">
                    <field name="voicenter_last_call_date"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
